<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OMDB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_main</item>
        <item name="colorSecondaryVariant">@color/primary_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_main</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">510dp</item>
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>


    <!--    TEXT VIEW     -->
    <style name="Display" parent="@style/AppTextView">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Title_1" parent="@style/AppTextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Title_2" parent="@style/AppTextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Title_3" parent="@style/AppTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subtitle_1" parent="@style/AppTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Subtitle_2" parent="@style/AppTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body_1" parent="@style/AppTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body_2" parent="@style/AppTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Action_1" parent="@style/AppTextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Action_2" parent="@style/AppTextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Action_3" parent="@style/AppTextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Textfield" parent="@style/Body_2">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:background">@drawable/state_fieldbox</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Textarea" parent="@style/Body_2">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:background">@drawable/state_fieldbox</item>
        <item name="android:gravity">top</item>
        <item name="android:lines">3</item>
    </style>



    <style name="Caption" parent="@style/AppTextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--    Button-->
    <style name="Buttonsolid" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="ButtonBorder" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">#fff</item>
        <item name="cornerRadius">@dimen/corner_radius</item>

        <item name="android:textColor">@color/button_color</item>
        <item name="strokeColor">@color/button_color</item>
        <item name="strokeWidth">1dp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>